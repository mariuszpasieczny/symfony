<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity repository-class="AppBundle\Repository\ShopRepository" name="AppBundle\Entity\Shop">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name" length="255" nullable="true"/>
        <field name="address1" type="string" column="address1" length="255"/>
        <field name="address2" type="string" column="address2" length="255" nullable="true"/>
        <field name="address3" type="string" column="address3" length="255" nullable="true"/>
        <field name="postcode" type="string" column="postcode" length="12"/>
        <field name="city" type="string" column="city" length="255"/>
        <field name="countryCode" type="string" column="country_code" length="3"/>
        <field name="email" type="string" column="email" nullable="true" length="255"/>
        <field name="phoneNumber" type="string" column="phone_number" nullable="true" length="255"/>
        <field name="mobileNumber" type="string" column="mobile_number" nullable="true" length="255"/>
        <field name="faxNumber" type="string" column="fax_number" nullable="true" length="255"/>
        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create" />
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update" />
        </field>
        <field name="deletedAt" type="datetime" column="deleted_at" nullable="true"/>
        <gedmo:soft-deleteable field-name="deletedAt" time-aware="false" />
    </entity>
</doctrine-mapping>
